public class Main {
    public static void main(String[] args) {
        int valor = -5;
        verificarPositivoNegativo(valor);
    }

    public static void verificarPositivoNegativo(int valor) {
        if (valor >= 0) {
            System.out.println("O valor é positivo");
        } else {
            System.out.println("O valor é negativo");
        }
    }
}
