public class Main {
    public static void main(String[] args) {
        int valor = 5;
        int somatorio = calcularSomatorio(valor);
        System.out.println("Somat√≥rio de " + valor + ": " + somatorio);
    }

    public static int calcularSomatorio(int valor) {
        int somatorio = 0;

        for (int i = 1; i <= valor; i++) {
            somatorio += i;
        }

        return somatorio;
    }
}
