soma = 0
quantidade = 0

while True:
  numero = int(
    input(
      "Digite um número inteiro positivo (ou um negativo para encerrar): "))

  if numero < 0:
    break

  soma += numero
  quantidade += 1

if quantidade > 0:
  media = soma / quantidade
  print("A média aritmética dos números digitados é:", media)
else:
  print("Não foi digitado nenhum número positivo.")
