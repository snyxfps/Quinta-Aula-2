soma = 0
qtd_pares = 0

while True:
  num = int(input("Digite um número (0 para sair): "))
  if num == 0:
    break
  if num % 2 == 0:
    soma += num
    qtd_pares += 1

if qtd_pares > 0:
  media = soma / qtd_pares
  print("A média dos números pares é:", media)
else:
  print("Não foram digitados números pares.")
