import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        int var1, var2;

        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite o valor da primeira variável: ");
        var1 = scanner.nextInt();

        System.out.print("Digite o valor da segunda variável: ");
        var2 = scanner.nextInt();

        int soma = calcularSoma(var1, var2);
        System.out.println("A soma das duas variáveis é: " + soma);
    }

    public static int calcularSoma(int a, int b) {
        int soma = a + b;
        return soma;
    }
}
