public class Main {
    public static void main(String[] args) {
        double altura = 1.75;
        String sexo = "M";
        double pesoIdeal = calcularPesoIdeal(altura, sexo);
        System.out.println("Peso ideal: " + pesoIdeal);
    }

    public static double calcularPesoIdeal(double altura, String sexo) {
        double pesoIdeal;
        if (sexo.equalsIgnoreCase("M")) {
            pesoIdeal = 72.7 * altura - 58;
        } else if (sexo.equalsIgnoreCase("F")) {
            pesoIdeal = 62.1 * altura - 44.7;
        } else {
            throw new IllegalArgumentException("Sexo inv√°lido. Informe 'M' para masculino ou 'F' para feminino.");
        }
        return pesoIdeal;
    }
}
