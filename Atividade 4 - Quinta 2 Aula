nota1 = float(input("Digite a nota da primeira avaliação: "))
nota2 = float(input("Digite a nota da segunda avaliação: "))

media = (nota1 + nota2) / 2

if media > 6.0:
    print("APROVADO")
elif media > 3.0:
    print("EXAME")
else:
    print("REPROVADO")
    print("Você foi REPROVADO! Estude mais")
