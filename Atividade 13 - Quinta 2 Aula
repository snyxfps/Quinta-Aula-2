altura = float(input("Digite a altura em metros: "))
sexo = int(input("Digite o sexo (1 para feminino e 2 para masculino): "))

if sexo == 1:
  peso_ideal = (62.1 * altura) - 44.7
  print("O peso ideal para uma mulher com altura de", altura, "m é:",
        peso_ideal, "kg")
elif sexo == 2:
  peso_ideal = (72.7 * altura) - 58
  print("O peso ideal para um homem com altura de", altura, "m é:", peso_ideal,
        "kg")
else:
  print("Opção de sexo inválida.")
