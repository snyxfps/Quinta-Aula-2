notas = [] # lista para armazenar as notas dos alunos

for i in range(37):
    nota = float(input(f"Informe a nota do aluno {i+1}: "))
    notas.append(nota) # adiciona a nota na lista

media = sum(notas) / len(notas) # calcula a média
maior_nota = max(notas) # encontra a maior nota
menor_nota = min(notas) # encontra a menor nota

print(f"Média da turma: {media:.2f}")
print(f"Maior nota: {maior_nota}")
print(f"Menor nota: {menor_nota}")
